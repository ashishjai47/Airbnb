<header class="bg-red-500 text-white p-4 shadow-md">
  <nav class="container mx-auto px-8 h-40">
    <div class="flex justify-between items-center h-full pt-4">
      <!-- Left side -->
      <div class="flex items-center space-x-12">
        <a href="/" class="text-white text-3xl font-bold hover:text-gray-100 transition-colors flex items-center">
          <svg class="h-10 w-10 mr-3" viewBox="0 0 32 32" fill="currentColor">
            <path d="M16 0c-5.523 0-10 4.477-10 10 0 6.175 7.972 15.057 9.32 16.634.596.697 1.764.697 2.36 0C19.028 25.057 27 16.175 27 10c0-5.523-4.477-10-10-10zm0 14a4 4 0 110-8 4 4 0 010 8z"/>
          </svg>
          airbnb
        </a>

        <!-- Navigation Links -->
        <% if (isloggedIn) { %>
          <% if (user && user.userType === 'guest') { %>
          <div class="flex items-center space-x-8">
            <a href="/homes" class="text-white hover:text-gray-100 px-4 py-3 text-base font-semibold transition-colors hover:bg-red-600 rounded-lg flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
              </svg>
              Homes
            </a>
            <a href="/favourites" class="text-white hover:text-gray-100 px-4 py-3 text-base font-semibold transition-colors hover:bg-red-600 rounded-lg flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
              </svg>
              Favourites
            </a>
            <a href="/bookings" class="text-white hover:text-gray-100 px-4 py-3 text-base font-semibold transition-colors hover:bg-red-600 rounded-lg flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              Bookings
            </a>
            <% } else { %>
            <a href="/host/host-home-list" class="text-white hover:text-gray-100 px-4 py-3 text-base font-semibold transition-colors hover:bg-red-600 rounded-lg flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
              </svg>
              Host Homes
            </a>
            <a href="/host/add-home" class="text-white hover:bg-gray-100 px-5 py-3 rounded-full text-base font-semibold transition-colors shadow-md flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              Add Home
            </a>
            <% } %>
          </div>
        <% } %>
      </div>

      <!-- Right side -->
      <div class="flex items-center space-x-8">
        <% if (isloggedIn) { %>
          <form action="/logout" method="POST">
            <button type="submit" class="text-white hover:text-gray-100 px-4 py-3 text-base font-semibold transition-colors hover:bg-red-600 rounded-lg flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
              </svg>
              Logout
            </button>
          </form>
        <% } else { %>
          <a href="/login" class="text-white hover:text-gray-100 px-4 py-3 text-base font-semibold transition-colors hover:bg-red-600 rounded-lg flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" />
            </svg>
            Login
          </a>
          <a href="/signup" class="text-white hover:text-gray-100 px-4 py-3 text-base font-semibold transition-colors hover:bg-red-600 rounded-lg flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
            Sign up
          </a>
        <% } %>
      </div>
    </div>
  </nav>
</header>

<!-- Spacing for fixed header -->
<div class="h-40"></div>