<%- include('../partials/head') %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  </head>
  <body class="bg-gray-100 min-h-screen">
    <%- include('../partials/nav') %>
    <main class="container mx-auto px-4">
      <div class="max-w-md mx-auto bg-white rounded-2xl shadow-lg mt-16 mb-8">
        <div class="p-8">
          <!-- Logo or Image -->
          <div class="text-center mb-8">
            <i class="fab fa-airbnb text-red-500 text-5xl mb-4"></i>
            <h1 class="text-2xl font-bold text-gray-800">Welcome Back</h1>
            <p class="text-gray-600 text-sm mt-2">Please enter your details to sign in</p>
          </div>

          <form action="/auth/login" method="POST">
            <%- include('../partials/errors',{errors:errors}) %>

            <!-- Email field -->
             <!-- Email field -->
            <div class="mb-6">
              <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email</label>
              <div class="flex w-full">
                <div class="bg-gray-50 border border-r-0 rounded-l-lg w-14 flex items-center justify-center">
                  <i class="fas fa-envelope text-gray-400"></i>
                </div>
                <input
                  type="email"
                  id="email"
                  name="email"
                  placeholder="your@email.com"
                  class="flex-1 border rounded-r-lg py-3 px-4 focus:ring-2 focus:ring-red-500 focus:border-transparent w-full"
                  required
                />
              </div>
            </div>

            <!-- Password field -->
            <div class="mb-8">
              <label for="password" class="block text-sm font-medium text-gray-700 mb-2">Password</label>
              <div class="flex w-full">
                <div class="bg-gray-50 border border-r-0 rounded-l-lg w-14 flex items-center justify-center">
                  <i class="fas fa-lock text-gray-400"></i>
                </div>
                <input
                  type="password"
                  id="password"
                  name="password"
                  placeholder="••••••••"
                  class="flex-1 border rounded-r-lg py-3 px-4 focus:ring-2 focus:ring-red-500 focus:border-transparent w-full"
                  required
                />
              </div>
            </div>
          
            <!-- Remember me and Forgot password -->
            <!-- <div class="flex items-center justify-between mb-6">
              <label class="inline-flex items-center">
                <input type="checkbox" name="remember" class="text-red-500 focus:ring-red-500"/>
                <span class="ml-2 text-sm text-gray-600">Remember me</span>
              </label>
              <a href="/forgot-password" class="text-sm text-red-500 hover:underline">Forgot password?</a>
            </div> -->

            <!-- Submit button -->
            <button 
              type="submit" 
              class="w-full bg-red-500 text-white py-3 rounded-lg hover:bg-red-600 transition-colors flex items-center justify-center space-x-2">
              <span>Sign in</span>
              <i class="fas fa-arrow-right text-sm"></i>
            </button>

            <!-- Sign up link -->
            <p class="text-center text-sm text-gray-600 mt-6">
              Don't have an account? 
              <a href="/signup" class="text-red-500 hover:underline">Sign up</a>
            </p>
          </form>
        </div>
      </div>
    </main>
  </body>
</html>